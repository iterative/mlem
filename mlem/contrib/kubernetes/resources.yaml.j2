apiVersion: v1
kind: Namespace
metadata:
  name: mlem-{{ name }}-app
  labels:
    name: mlem-{{ name }}-app

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ name }}
  namespace: mlem-{{ name }}-app
spec:
  selector:
    matchLabels:
      app: {{ name }}
  template:
    metadata:
      labels:
        app: {{ name }}
    spec:
      containers:
      - name: {{ name }}
        image: {{ image_uri }}
        imagePullPolicy: {{ image_pull_policy }}
        ports:
        - containerPort: {{ port }}

---

apiVersion: v1
kind: Service
metadata:
  name: {{ name }}
  namespace: mlem-{{ name }}-app
  labels:
    run: {{ name }}
spec:
  ports:
  - port: {{ port }}
    protocol: TCP
    targetPort: {{ port }}
  selector:
    app: {{ name }}
  type: {{ service_type }}
